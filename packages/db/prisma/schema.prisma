generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Library {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  configs     ConfigFiles
  buildConfig String
  createdAt   DateTime    @default(now())
  modifiedAt  DateTime    @updatedAt
  components  Component[]

  @@map("libraries")
}

model Component {
  id         String                 @id @default(auto()) @map("_id") @db.ObjectId
  cbId       String                 @db.ObjectId
  name       String
  aliases    String[]
  desc       String
  envs       ComponentSupportedEnvs
  deps       Dependencies
  tags       String[]
  createdAt  DateTime               @default(now())
  modifiedAt DateTime               @updatedAt

  libId String  @db.ObjectId
  lib   Library @relation(fields: [libId], references: [id])

  @@map("components")
}

model CodeBlock {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  code String

  @@map("codeblocks")
}

type ComponentSupportedEnvs {
  library   NameWithVersion
  framework NameWithVersion?
}

type NameWithVersion {
  name    String
  version String
}

type Dependencies {
  external String[]
  modules  String[]
}

type ConfigFiles {
  packageJson    String
  tsconfig       String?
  tailwindConfig String?
  nextConfig     String?
  additional     Json?
}
